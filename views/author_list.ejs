<!DOCTYPE html>
<html>
  <head>
    <%-include('./partial/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%-include('./partial/sidenav.ejs') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if (author_list.length) { %> <% author_list.forEach( author => {
            %>
            <li>
              <a href="<%= author.url  %> "><%= author.name %> </a>
              (<%= author.date_of_birth_formatted %> - <%=
              author.date_of_death_formatted %>)
            </li>
            <% }) %> <%} else { %>
            <li>There are no authors</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
