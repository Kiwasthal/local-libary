<!DOCTYPE html>
<html>
  <head>
    <%-include('./partial/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%-include('./partial/sidenav.ejs') %></div>
        <div class="col-sm-10">
          <h1><%= title %> :<%= genre.name %></h1>
          <% if (genre_books.length > 0) { %>
          <p>
            You must first remove all books from this genre before attempting to
            delete it :
          </p>
          <ul class="card-list large-cards">
            <% genre_books.forEach( book => { %>
            <li class="card" style="margin-bottom: 10px">
              <a href="<%= book.url %>"> <%= book.title %> </a>
              <p><%= book.summary %></p>
            </li>
            <% }) %>
          </ul>
          <%} else { %>
          <p>Are you sure you want to delete this genre?</p>
          <form action="" method="post">
            <input
              type="hidden"
              name="genreid"
              id="genreid"
              value="<%= genre._id %>"
            />
            <button class="btn btn-primary" type="submit">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
