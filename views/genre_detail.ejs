<!DOCTYPE html>
<html>
  <head>
    <%-include('./partial/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%-include('./partial/sidenav.ejs') %></div>
        <div class="col-sm-10">
          <h1><%= genre.name %></h1>
          <div style="margin-left: 20px; margin-top: 20px">
            <h4>Books</h4>
            <dl>
              <% if (genre_books.length) { %> <% genre_books.forEach( book => {
              %>
              <dt>
                <a href="<%= book.url  %> "><%= book.title %> </a>
              </dt>
              <dd><%= book.summary %></dd>
              <% }) %> <%} else { %>
              <li>This genre has no books</li>
              <% } %>
            </dl>
          </div>
          <hr />
          <p><a href="<%= genre.url %>/delete">Delete genre</a></p>
        </div>
      </div>
    </div>
  </body>
</html>
