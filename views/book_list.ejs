<!DOCTYPE html>
<html>
  <head>
    <%-include('./partial/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%-include('./partial/sidenav.ejs') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if (book_list.length) { %> <% book_list.forEach( book => { %>
            <li>
              <a href="<%= book.url  %> "><%= book.title %> </a>
              (<%= book.author.name %>)
            </li>
            <% }) %> <%} else { %>
            <li>No books</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
