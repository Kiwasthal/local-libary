<!DOCTYPE html>
<html>
  <head>
    <%-include('./partial/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%-include('./partial/sidenav.ejs') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if (genre_list.length) { %> <% genre_list.forEach( genre => { %>
            <li>
              <a href="<%= genre.url  %> "><%= genre.name %> </a>
            </li>
            <% }) %> <%} else { %>
            <li>There are no authors</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
