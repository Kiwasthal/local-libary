<!DOCTYPE html>
<html>
  <head>
    <%-include('./partial/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%-include('./partial/sidenav.ejs') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form action="" method="post">
            <div class="form-group">
              <label for="first_name">First Name:</label>
              <input
                type="text"
                name="first_name"
                id="first_name"
                class="form-control"
                placeholder="First name (Christian)"
                required="true"
                value="<%= locals.author === undefined ? '' : author.first_name %>"
              />
              <label for="family_name">Family Name:</label>
              <input
                type="text"
                name="family_name"
                id="family_name"
                class="form-control"
                placeholder="Family name (Surname)"
                required="true"
                value="<%= locals.author === undefined ? '' : author.family_name %>"
              />
            </div>
            <div class="form-group">
              <label for="date_of_birth">Date of birth:</label>
              <input
                type="date"
                name="date_of_birth"
                id="date_of_birth"
                class="form-control"
                value="<%= typeof author === 'undefined' || !author.date_of_birth  ? '' :  formatDate(author.date_of_birth, 'yyyy-MM-dd' )  %>"
              />
              <label for="date_of_death">Date of death:</label>
              <input
                type="date"
                name="date_of_death"
                id="date_of_death"
                class="form-control"
                value="<%= typeof author === 'undefined' || !author.date_of_death  ? '' :  formatDate(author.date_of_death, 'yyyy-MM-dd' )  %>"
              />
            </div>
            <button
              class="btn btn-primary"
              type="submit"
              style="margin-top: 20px"
            >
              Submit
            </button>
          </form>
          <% if (locals.errors) { %>
          <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
